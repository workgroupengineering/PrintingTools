<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="AvaloniaSample.MainWindow"
        Title="PrintingTools macOS Preview">
    <Grid Margin="16"
          RowDefinitions="Auto,*"
          RowSpacing="12">
        <StackPanel Orientation="Horizontal"
                    Spacing="12">
            <Button x:Name="PreviewButton"
                    Width="160"
                    Content="Preview"
                    Click="OnPreviewClicked"/>
            <Button x:Name="NativePreviewButton"
                    Width="180"
                    Content="macOS Print Preview"
                    Click="OnNativePreviewClicked"/>
            <Button x:Name="ExportPdfButton"
                    Width="160"
                    Content="Export PDF"
                    Click="OnExportPdfClicked"/>
            <TextBlock x:Name="StatusText"
                       VerticalAlignment="Center"
                       FontSize="14"/>
        </StackPanel>
        <Border Grid.Row="1"
                BorderBrush="#33000000"
                BorderThickness="1"
                CornerRadius="4"
                Padding="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <TextBlock Text="Use the Preview button to open the new print preview window."
                       FontSize="16"
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
